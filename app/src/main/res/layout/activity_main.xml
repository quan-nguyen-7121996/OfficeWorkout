<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/boyButton"
        android:layout_width="140dip"
        android:layout_height="239dip"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/girlButton"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/rsz_muscle" />

    <ImageButton
        android:id="@+id/girlButton"
        android:layout_width="150dip"
        android:layout_height="245dip"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        app:srcCompat="@drawable/rsz_1gaidep" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dip"
        android:layout_height="50dip"
        android:layout_alignEnd="@+id/girlButton"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="81dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Bạn là ? "
        android:textColor="@color/colorPrimary"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/boyButton"
        android:layout_marginEnd="36dp"
        android:text="Nam"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/girlButton"
        android:layout_below="@+id/girlButton"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="14dp"
        android:text="Nữ"
        android:textSize="35dp" />

</RelativeLayout>
